@model EntityLayer.Concrete.Talent
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="max-width: 600px; margin: 0px auto; padding: 20px; background-color: #f5f5f5; border-radius: 10px; box-shadow: 0 0 10px gray;">

    <div style="text-align: center;">
        <img src="@Model.ImageUrl" alt="Profil Fotoğrafı" style="width: 100px; height: 100px; border-radius: 50%; border: 2px solid #333;" />
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
    </div>

    <hr />

    <h4>Yetenekler</h4>

    @foreach (var skill in Model.SkillList?.Split(',') ?? new string[0])
    {
        var parts = skill.Trim().Split(':');  // "HTML:90"
        var name = parts[0];
        var percent = parts.Length > 1 ? parts[1] : "100";

        <div style="margin-bottom: 10px;">
            <strong>@name</strong> (%@percent)
            <div style="height: 10px; background-color: #ddd; border-radius: 5px;">
                <div style="width: @percent%; height: 10px; background-color: orange; border-radius: 5px;"></div>
            </div>
        </div>
    }

    <div style="text-align: center; margin-top: 20px;">
        <a href="/Talent/Edit" class="btn btn-primary">Düzenle</a>
    </div>
</div>

