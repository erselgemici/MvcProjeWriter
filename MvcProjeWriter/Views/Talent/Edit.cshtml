@model EntityLayer.Concrete.Talent
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h3 class="mb-4">Yetenek Kartını Düzenle</h3>

    <form method="post">
        <input type="hidden" asp-for="TalentID" />

        <div class="form-group mb-3">
            <label>Ünvan</label>
            <input asp-for="Title" class="form-control" placeholder="Örn: Full Stack Developer" />
        </div>

        <div class="form-group mb-3">
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kendini kısaca tanıt"></textarea>
        </div>

        <div class="form-group mb-3">
            <label>Yetenek Listesi</label>
            <input asp-for="SkillList" class="form-control" placeholder="Örn: HTML:90, CSS:80, C#:85" />
            <small class="form-text text-muted">Yetenek adını ve yüzdeyi virgül ile ayırarak gir: <i>Skill:Percent</i></small>
        </div>

        <div class="form-group mb-4">
            <label>Profil Resmi URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Talent/Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>

