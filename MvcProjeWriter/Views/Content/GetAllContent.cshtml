@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "GetAllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("GetAllContent", "Content", FormMethod.Get))
{
    <p>
        Aranacak Kelimeyi Girin : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

@if (Model.Count == 0)
{
    <p style="color:red; font-weight:bold;">Aradığınız kelimeye uygun içerik bulunamadı.</p>
}
else
{
    foreach (var item in Model)
    {
        <p>@item.ContentValue</p>
    }
}

